<?xml version="1.0"?>
<launch>
	<arg name="droneip" default="192.168.1.1" />
	<arg name="freq" default="8" />        
	<node name="ardrone_driver" pkg="ardrone_autonomy" type="ardrone_driver" output="screen" clear_params="true" args="-ip $(arg droneip)">
		<!-- GENERAL -->
		<param name="navdata_demo" value="0" />
		<!-- CONTROL -->
		<param name="outdoor" value="0"/>
		<param name="flight_without_shell" value="0"/>
		<param name="loop_rate" value="500"/>
		<!-- NETWORK -->
		<!-- VIDEO -->
		<param name="realtime_video" value="true" />
		<!-- LED -->
		<!-- DETECTION -->
		<param name="detect_type" value="10" />
		<param name="detections_select_h" value="32" />
		<!-- CUSTOM -->
		<param name="application_desc" value="SMM AR Drone" />
		<!-- Data -->
		<param name="realtime_navdata" value="true" />
	</node>
	<node name="drone_stateestimation" pkg="tum_ardrone" type="drone_stateestimation"></node>
	<node name="drone_autopilot" pkg="tum_ardrone" type="drone_autopilot"></node>
</launch>
